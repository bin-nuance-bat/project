{
	"name": "honesty-store-kiosk",
	"description": "Kiosk client for honesty store in scottLogic NCL office",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@tensorflow-models/posenet": "0.1.3",
		"@tensorflow-models/mobilenet": "^0.1.1",
		"@tensorflow/tfjs": "~0.11.6",
		"ajv": "^6.0.0",
		"babel-plugin-syntax-class-properties": "^6.13.0",
		"eslint-plugin-react": "^7.10.0",
		"hoek": "^5.0.3",
		"firebase": "^5.2.0",
		"node-sass-chokidar": "^1.3.0",
		"npm-run-all": "^4.1.3",
		"react": "^16.4.1",
		"react-bootstrap": "^0.32.1",
		"react-dom": "^16.4.1",
		"react-redux": "^5.0.7",
		"react-router": "^4.3.1",
		"react-router-dom": "^4.3.1",
		"react-router-redux": "^4.0.8",
		"react-scripts": "1.1.4",
		"react-webcam": "^1.0.1",
		"redux": "^4.0.0",
		"redux-thunk": "^2.3.0",
		"yarn": "^1.7.0"
	},
	"scripts": {
		"build-css": "node-sass-chokidar src/ -o src/",
		"watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
		"prettify": "prettier --write ./src/**/*.js",
		"puppeteer-test": "node test/puppeteer.js",
		"start-js": "react-scripts start",
		"start": "npm-run-all -p watch-css start-js",
		"build-js": "rm -rf node_modules/@tensorflow/tfjs-converter/dist-es6 && react-scripts build",
		"build": "npm-run-all build-css build-js",
		"test": "react-scripts test --env=jsdom",
		"eject": "react-scripts eject",
		"deploy-local": "npm run build && firebase deploy",
		"deploy": "firebase use default && firebase deploy --token $FIREBASE_TOKEN",
		"lint": "eslint **/*.js"
	},
	"lint-staged": {
		"*.js": [
			"npm run prettify",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run puppeteer-test"
		}
	},
	"devDependencies": {
		"babel-core": "^6.26.3",
		"babel-jest": "^23.4.0",
		"babel-preset-env": "^1.7.0",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"husky": "^1.0.0-rc.13",
		"jest": "^23.4.1",
		"lint-staged": "^7.2.0",
		"prettier": "^1.13.7",
		"puppeteer": "^1.6.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"extends": [
			"eslint:recommended",
			"plugin:react/recommended"
		],
		"parserOptions": {
			"ecmaVersion": 9,
			"sourceType": "module",
			"ecmaFeatures": {
				"jsx": true
			}
		},
		"env": {
			"browser": true,
			"jest": true,
			"node": true
		}
	},
	"resolutions": {
		"eslint-scope": "3.7.1"
	}
}
