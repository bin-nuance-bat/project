{
	"name": "honesty-store-kiosk",
	"description": "Kiosk client for honesty store in scottLogic NCL office",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@tensorflow/tfjs": "^0.12.0",
		"babel-plugin-syntax-class-properties": "^6.13.0",
		"eslint-plugin-react": "^7.10.0",
		"react": "^16.4.1",
		"react-dom": "^16.4.1",
		"react-scripts": "1.1.4",
		"react-webcam": "^1.0.1"
	},
	"scripts": {
		"prettify": "prettier --write ./src/**/*.js",
		"puppeteer-test": "node test/puppeteer.js",
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test --env=jsdom",
		"eject": "react-scripts eject",
		"deploy": "react-scripts build && firebase deploy --token $FIREBASE_TOKEN",
		"lint": "eslint **/*.js"
	},
	"lint-staged": {
		"*.js": [
			"npm run prettify",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run puppeteer-test"
		}
	},
	"devDependencies": {
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"eslint-plugin-react-native": "^3.2.1",
		"husky": "^1.0.0-rc.10",
		"lint-staged": "^7.2.0",
		"prettier": "^1.13.7",
		"puppeteer": "^1.5.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"extends": [
			"eslint:recommended",
			"plugin:react/recommended"
		],
		"parserOptions": {
			"ecmaVersion": 9,
			"sourceType": "module",
			"ecmaFeatures": {
				"jsx": true
			}
		},
		"globals": {
			"alert": true,
			"console": true,
			"fetch": true,
			"require": true,
			"jest": true,
			"it": true,
			"expect": true,
			"document": true,
			"clearInterval": true,
			"setInterval": true,
			"process": true,
			"navigator": true,
			"Image": true
		}
	}
}
