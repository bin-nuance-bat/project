service cloud.firestore {
  match /databases/{database}/documents {
  
    match /training_data/{document} {
      allow create: if request.resource.data.trusted == false && 
      	(request.auth.token.admin == true ||  request.auth.token.kiosk == true);
    }
    
    match /users/{user} {
    	allow get: if request.auth.uid == user
    	allow create: if request.resource.data.admin == false && request.resource.data.kiosk == false;
    }
    
    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }
  }
}
